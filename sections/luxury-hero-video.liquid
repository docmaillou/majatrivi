{% liquid
  assign video_url = section.settings.video_url
  assign fallback_image = section.settings.fallback_image
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign show_overlay = section.settings.show_overlay
  assign overlay_opacity = section.settings.overlay_opacity
%}

<section 
  id="LuxuryHero-{{ section.id }}" 
  class="luxury-hero color-{{ section.settings.color_scheme }}"
  data-section-id="{{ section.id }}"
>
  <div class="luxury-hero__media-wrapper">
    {% if video_url != blank %}
      <video 
        class="luxury-hero__video"
        autoplay 
        muted 
        loop 
        playsinline
        poster="{% if fallback_image != blank %}{{ fallback_image | image_url: width: 1920 }}{% endif %}"
      >
        <source src="{{ video_url }}" type="video/mp4">
        {% if fallback_image != blank %}
          {{ fallback_image | image_url: width: 1920 | image_tag: class: 'luxury-hero__fallback-image' }}
        {% endif %}
      </video>
    {% elsif fallback_image != blank %}
      {{ fallback_image | image_url: width: 1920 | image_tag: class: 'luxury-hero__image' }}
    {% else %}
      <div class="luxury-hero__placeholder">
        {{ 'hero-apparel-1' | placeholder_svg_tag: 'luxury-hero__placeholder-svg' }}
      </div>
    {% endif %}
    
    {% if show_overlay %}
      <div class="luxury-hero__overlay" style="opacity: {{ overlay_opacity | divided_by: 100.0 }}"></div>
    {% endif %}
  </div>
  
  <div class="luxury-hero__content">
    <div class="luxury-hero__content-inner">
      {% if heading != blank %}
        <h1 class="luxury-hero__heading">{{ heading }}</h1>
      {% endif %}
      
      {% if subheading != blank %}
        <p class="luxury-hero__subheading">{{ subheading }}</p>
      {% endif %}
      
      {% if button_text != blank and button_link != blank %}
        <div class="luxury-hero__button-wrapper">
          <a href="{{ button_link }}" class="luxury-hero__button btn">
            {{ button_text }}
            <svg class="luxury-hero__button-arrow" width="16" height="16" viewBox="0 0 16 16" fill="none">
              <path d="M8 1L15 8L8 15M15 8H1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
        </div>
      {% endif %}
    </div>
    
    <div class="luxury-hero__scroll-indicator">
      <div class="luxury-hero__scroll-text">Scroll to explore</div>
      <div class="luxury-hero__scroll-arrow">
        <svg width="12" height="16" viewBox="0 0 12 16" fill="none">
          <path d="M6 1V15M6 15L1 10M6 15L11 10" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .luxury-hero {
    position: relative;
    height: 100vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #000;
  }
  
  .luxury-hero__media-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .luxury-hero__video,
  .luxury-hero__image,
  .luxury-hero__fallback-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  .luxury-hero__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #1a1a1a, #2d2d2d);
  }
  
  .luxury-hero__placeholder-svg {
    width: 200px;
    height: 200px;
    opacity: 0.3;
  }
  
  .luxury-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg, 
      rgba(0, 0, 0, 0.4) 0%, 
      rgba(0, 0, 0, 0.2) 50%, 
      rgba(0, 0, 0, 0.6) 100%
    );
    z-index: 2;
  }
  
  .luxury-hero__content {
    position: relative;
    z-index: 3;
    text-align: center;
    color: #fff;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
  }
  
  .luxury-hero__content-inner {
    margin-bottom: 8rem;
  }
  
  .luxury-hero__heading {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 300;
    letter-spacing: -0.03em;
    line-height: 1.1;
    margin: 0 0 1.5rem 0;
    text-transform: uppercase;
    font-family: var(--font-primary--family);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.5s forwards;
  }
  
  .luxury-hero__subheading {
    font-size: clamp(1.1rem, 2.5vw, 1.4rem);
    font-weight: 300;
    line-height: 1.6;
    margin: 0 0 3rem 0;
    max-width: 600px;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 0.8s forwards;
  }
  
  .luxury-hero__button-wrapper {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease-out 1.1s forwards;
  }
  
  .luxury-hero__button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 2.5rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #fff;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 400;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }
  
  .luxury-hero__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.5s ease;
  }
  
  .luxury-hero__button:hover::before {
    left: 100%;
  }
  
  .luxury-hero__button:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }
  
  .luxury-hero__button-arrow {
    transition: transform 0.3s ease;
  }
  
  .luxury-hero__button:hover .luxury-hero__button-arrow {
    transform: translateX(3px);
  }
  
  .luxury-hero__scroll-indicator {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0;
    animation: fadeIn 1s ease-out 2s forwards;
  }
  
  .luxury-hero__scroll-text {
    font-size: 0.8rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.8);
  }
  
  .luxury-hero__scroll-arrow {
    animation: bounce 2s infinite;
  }
  
  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes fadeIn {
    to {
      opacity: 1;
    }
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-5px);
    }
    60% {
      transform: translateY(-3px);
    }
  }
  
  @media (max-width: 768px) {
    .luxury-hero {
      min-height: 500px;
    }
    
    .luxury-hero__content {
      padding: 0 1rem;
    }
    
    .luxury-hero__content-inner {
      margin-bottom: 4rem;
    }
    
    .luxury-hero__heading {
      margin-bottom: 1rem;
    }
    
    .luxury-hero__subheading {
      margin-bottom: 2rem;
    }
    
    .luxury-hero__scroll-indicator {
      bottom: 1rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Luxury Hero Video",
  "tag": "section",
  "class": "luxury-hero-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Video Settings"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL",
      "info": "Use a high-quality MP4 video file. For best results, use 1920x1080 or 4K resolution."
    },
    {
      "type": "image_picker",
      "id": "fallback_image",
      "label": "Fallback Image",
      "info": "This image will be shown if video fails to load or on mobile devices."
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "MAJATRIVI"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Luxury fashion redefined. Discover our exclusive collection of premium clothing crafted for the modern connoisseur."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explore Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Overlay Settings"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show Overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 40
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    }
  ],
  "presets": [
    {
      "name": "Luxury Hero Video",
      "category": "Video"
    }
  ]
}
{% endschema %}