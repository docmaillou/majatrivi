{% liquid
  assign video_url = section.settings.video_url
  assign fallback_image = section.settings.fallback_image
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign show_overlay = section.settings.show_overlay
  assign overlay_opacity = section.settings.overlay_opacity
%}

<section 
  id="MajatriviHero-{{ section.id }}" 
  class="majatrivi-hero"
  data-section-id="{{ section.id }}"
>
  <div class="majatrivi-hero__media">
    {% if video_url != blank %}
      <video 
        class="majatrivi-hero__video"
        autoplay 
        muted 
        loop 
        playsinline
        preload="metadata"
        poster="{% if fallback_image != blank %}{{ fallback_image | image_url: width: 1920 }}{% endif %}"
      >
        <source src="{{ video_url }}" type="video/mp4">
        {% if fallback_image != blank %}
          {{ fallback_image | image_url: width: 1920 | image_tag: class: 'majatrivi-hero__fallback' }}
        {% endif %}
      </video>
    {% elsif fallback_image != blank %}
      {{ fallback_image | image_url: width: 1920 | image_tag: class: 'majatrivi-hero__image' }}
    {% endif %}
    
    {% if show_overlay %}
      <div class="majatrivi-hero__overlay" style="opacity: {{ overlay_opacity | divided_by: 100.0 }}"></div>
    {% endif %}
  </div>
  
  <div class="majatrivi-hero__flowing-bg"></div>
  
  <div class="majatrivi-hero__content">
    {% if heading != blank %}
      <h1 class="majatrivi-hero__title">{{ heading }}</h1>
    {% endif %}
    
    {% if subheading != blank %}
      <p class="majatrivi-hero__subtitle">{{ subheading }}</p>
    {% endif %}
    
    {% if button_text != blank and button_link != blank %}
      <a href="{{ button_link }}" class="majatrivi-hero__cta luxury-btn-premium">
        {{ button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
  .majatrivi-hero {
    position: relative;
    height: 100vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background: #000;
  }
  
  .majatrivi-hero__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  
  .majatrivi-hero__video,
  .majatrivi-hero__image,
  .majatrivi-hero__fallback {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
  
  .majatrivi-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0.1) 50%, rgba(0, 0, 0, 0.4) 100%);
    z-index: 2;
  }
  
  .majatrivi-hero__flowing-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 3;
    pointer-events: none;
    opacity: 0.6;
  }
  
  .majatrivi-hero__flowing-bg::before {
    content: '';
    position: absolute;
    top: -20%;
    left: -20%;
    width: 140%;
    height: 140%;
    background: radial-gradient(
      circle at 30% 70%,
      rgba(212, 175, 55, 0.08) 0%,
      rgba(212, 175, 55, 0.03) 30%,
      transparent 60%
    );
    animation: majatrivi-flow-1 20s ease-in-out infinite;
    will-change: transform, opacity;
    backface-visibility: hidden;
  }
  
  .majatrivi-hero__flowing-bg::after {
    content: '';
    position: absolute;
    top: -30%;
    right: -30%;
    width: 160%;
    height: 160%;
    background: radial-gradient(
      circle at 70% 30%,
      rgba(255, 255, 255, 0.04) 0%,
      rgba(255, 255, 255, 0.02) 40%,
      transparent 70%
    );
    animation: majatrivi-flow-2 25s ease-in-out infinite reverse;
    will-change: transform, opacity;
    backface-visibility: hidden;
  }
  
  .majatrivi-hero__content {
    position: relative;
    z-index: 4;
    text-align: center;
    color: #fff;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    opacity: 0;
    pointer-events: none;
  }
  
  .majatrivi-hero__content:has(.majatrivi-hero__title:not(:empty)),
  .majatrivi-hero__content:has(.majatrivi-hero__subtitle:not(:empty)),
  .majatrivi-hero__content:has(.majatrivi-hero__cta) {
    opacity: 1;
    pointer-events: auto;
  }
  
  .majatrivi-hero__title {
    font-size: clamp(4rem, 10vw, 8rem);
    font-weight: 200;
    letter-spacing: -0.02em;
    line-height: 0.85;
    margin: 0 0 2rem 0;
    text-transform: uppercase;
    background: linear-gradient(135deg, #ffffff 0%, #ffffff 60%, rgba(212, 175, 55, 0.9) 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    opacity: 0;
    transform: translateY(40px);
    animation: majatrivi-title-reveal 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.5s forwards;
  }
  
  .majatrivi-hero__subtitle {
    font-size: clamp(1rem, 2vw, 1.2rem);
    font-weight: 300;
    line-height: 1.6;
    margin: 0 0 4rem 0;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
    color: rgba(255, 255, 255, 0.85);
    opacity: 0;
    transform: translateY(30px);
    animation: majatrivi-subtitle-reveal 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) 1s forwards;
  }
  
  .majatrivi-hero__cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #fff;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 300;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    backdrop-filter: blur(20px);
    border-radius: 2px;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    position: relative;
    overflow: hidden;
    opacity: 0;
    transform: translateY(20px);
    animation: majatrivi-cta-reveal 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) 1.5s forwards;
    will-change: transform;
    backface-visibility: hidden;
  }
  
  .majatrivi-hero__cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.6s ease;
  }
  
  .majatrivi-hero__cta:hover::before {
    left: 100%;
  }
  
  .majatrivi-hero__cta:hover {
    transform: translateY(-1px);
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }
  
  @keyframes majatrivi-flow-1 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.6;
    }
    33% {
      transform: translate(20px, -10px) scale(1.05);
      opacity: 0.8;
    }
    66% {
      transform: translate(-10px, 15px) scale(0.95);
      opacity: 0.7;
    }
  }
  
  @keyframes majatrivi-flow-2 {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0.4;
    }
    50% {
      transform: translate(-15px, 20px) scale(1.1);
      opacity: 0.6;
    }
  }
  
  @keyframes majatrivi-title-reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes majatrivi-subtitle-reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes majatrivi-cta-reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .majatrivi-hero__flowing-bg::before,
    .majatrivi-hero__flowing-bg::after {
      animation: none !important;
    }
    
    .majatrivi-hero__title,
    .majatrivi-hero__subtitle,
    .majatrivi-hero__cta {
      opacity: 1 !important;
      transform: translateY(0) !important;
      animation: none !important;
    }
    
    .majatrivi-hero__cta:hover {
      transform: translateY(0) !important;
    }
  }
  
  @media (max-width: 768px) {
    .majatrivi-hero {
      min-height: 500px;
    }
    
    .majatrivi-hero__content {
      padding: 0 1.5rem;
    }
    
    .majatrivi-hero__subtitle {
      margin-bottom: 3rem;
    }
    
    .majatrivi-hero__cta {
      padding: 0.8rem 2rem;
      font-size: 0.85rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "MAJATRIVI Hero",
  "tag": "section",
  "class": "majatrivi-hero-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "image_picker",
      "id": "fallback_image",
      "label": "Fallback Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Brand Name",
      "default": "MAJATRIVI"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Tagline",
      "default": "Où la mode rencontre l'art contemporain"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Découvrir"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show Overlay",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay Opacity",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "%",
      "default": 25
    }
  ],
  "presets": [
    {
      "name": "MAJATRIVI Hero"
    }
  ]
}
{% endschema %}